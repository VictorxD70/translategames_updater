   For i = 1 to (Ubound(D4c))
	D4 = D4c(0)
   Next
If D1 = 0 Then
	Set objFSO = Nothing
	Set objRead = Nothing
idTimer = window.setTimeout("Install", 1, "VBScript")
ElseIf D1 = 100 Then
bar.style.width = D4a & "%"
