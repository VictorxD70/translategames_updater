   Function CheckSPD(D1)
On Error Resume Next
	D6 = 0
	D7 = 0
	DN = Chr(48)
arrCommands = Split(AppProgressUp.commandLine, " /:")
   For i = 1 to (Ubound(arrCommands))
	File = arrCommands(2)
   Next
Set objFSO = CreateObject("Scripting.FileSystemObject")
Set objFile = objFSO.GetFile(File)
D3 = objFile.SIZE
D3 = D3/1024
D3c = Split(D3, ",")
   For i = 1 to (Ubound(D3c))
	D3 = D3c(0)
   Next
D7 = D3
If D3 > 0 Then
D3 = Replace(D3,0,DN)
D6 = D3-D1
If D6 < 0 Then
SPD.value = " - 0 KB/s"
ElseIf D6 > 999 Then
D6 = D6/1024
D6c = Split(D6, ",")
   For i = 1 to (Ubound(D6c))
	D6 = D6c(0)
	D6v = D6c(1)
   Next
D6v = Replace(D6v,0,DN)
D6v = left(D6v,2)
D6 = Replace(D6,0,DN)
If D6v = 0 Then
D6v = DN&DN
ElseIf D6v > 0 Then
D6v = Replace(D6v,0,DN)
D6v = D6v&DN&DN
D6v = left(D6v,2)
Else
D6v = DN&DN
End If
D6 = D6 &","& D6v
SPD.value = " - "& D6 &" MB/s"
ElseIf D6 < 1000 Then
SPD.value = " - "& D6 &" KB/s"
End If
End If
idTimer = window.setTimeout("CheckSPD("""&D7&""")", 1000, "VBScript")
Exit Function
   End Function
'-> Count Down Function
   Function Counter()
On Error Resume Next
	 D1 = 0
	 D4 = 0
	 D5 = 0
	 DN = Chr(48)
Mode = "update"
arrCommands = Split(AppProgressUp.commandLine, " /:")
   For i = 1 to (Ubound(arrCommands))
	File = arrCommands(2)
	Total = arrCommands(3)
	Mode = arrCommands(4)
   Next
Set objFSO = CreateObject("Scripting.FileSystemObject")
Set objFile = objFSO.GetFile(File)
ASize = objFile.SIZE

TotalSize = Total/100
Percent = ASize/TotalSize
Tam = ASize/1024
Tamc = Split(Tam, ",")
   For i = 1 to (Ubound(Tamc))
	Tam = Tamc(0)
   Next
Tam2 = Tam
Tam = Replace(Tam,0,DN)
Tam2 = Replace(Tam2,0,DN)
Tam = Tam &" KB"
If Tam2 > 999 Then
Tam = Tam2/1024
Tamc = Split(Tam, ",")
   For i = 1 to (Ubound(Tamc))
	Tam = Tamc(0)
	Tamv = Tamc(1)
   Next
Tamv = Replace(Tamv,0,DN)
Tamv = left(Tamv,2)
Tam = Replace(Tam,0,DN)
If Tamv = 0 Then
Tamv = DN&DN
ElseIf Tamv > 0 Then
Tamv = Replace(Tamv,0,DN)
Tamv = Tamv&DN&DN
Tamv = left(Tamv,2)
Else
Tamv = DN&DN
End If
Tam = Tam &","& Tamv &" MB"
End If
Tot = Total/1024
Totc = Split(Tot, ",")
   For i = 1 to (Ubound(Totc))
	Tot = Totc(0)
   Next
Tot2 = Tot
Tot = Replace(Tot,0,DN)
Tot2 = Replace(Tot2,0,DN)
Tot = Tot &" KB"
If Tot2 > 999 Then
Tot = Tot2/1024
Totc = Split(Tot, ",")
   For i = 1 to (Ubound(Totc))
	Tot = Totc(0)
	Totv = Totc(1)
   Next
Totv = Replace(Totv,0,DN)
Totv = left(Totv,2)
Tot = Replace(Tot,0,DN)
If Totv = 0 Then
Totv = DN&DN
ElseIf Totv > 0 Then
Totv = Replace(Totv,0,DN)
Totv = Totv&DN&DN
Totv = left(Totv,2)
Else
Totv = DN&DN
End If
Tot = Tot &","& Totv &" MB"
End If

Set objFSO2 = CreateObject("Scripting.FileSystemObject")
Set objRead2 = objFSO2.OpenTextFile("StatusP.log", 1, True)
D2 = objRead2.ReadLine
If D2 = "stop" Then
	txt3.innerHTML = Replace(F1,"000000","8B0000") & "Download Interrompido...</FONT>"
	Set objFSO = Nothing
	Set objRead = Nothing
	window.clearTimeout(idTimer)
	idTimer = window.setTimeout("MyTimer2", 2000, "VBScript")
Exit Function
End If
If D2 = "fail" Then
If Mode = "update" Then
	txt3.innerHTML = Replace(F1,"000000","8B0000") & "Falha ao tentar baixar atualização...</FONT>"
ElseIf Mode = "install" Then
	txt3.innerHTML = Replace(F1,"000000","8B0000") & "Falha ao tentar baixar tradução...</FONT>"
End If
	Set objFSO = Nothing
	Set objRead = Nothing
	window.clearTimeout(idTimer)
	idTimer = window.setTimeout("MyTimer2", 2000, "VBScript")
Exit Function
End If

D6 = SPD.value
D3 = "- "& Tam &" / "& Tot
Set objFSO = CreateObject("Scripting.FileSystemObject")
Set objRead = objFSO.OpenTextFile("ProgressBar.log", 1, True)
D1 = objRead.ReadAll
D1c = Split(D1, vbCrLf)
   For i = 1 to (Ubound(D1c))
	D1 = D1c(0)
	D5 = D1c(1)
   Next
D1 = Replace(D1," ","")
If D5 = 1 Then

ElseIf D5 = 2 Then
idTimer = window.setTimeout("InstallD", 1, "VBScript")
Exit Function
End If
D1 = Percent
D1c = Split(D1, ",")
   For i = 1 to (Ubound(D1c))
	D1 = D1c(0)
   Next
D1 = D1
D4 = Percent/2
D4a = Percent/2
D4a = Replace(D4a,",",".")
D4c = Split(D4, ",")
   For i = 1 to (Ubound(D4c))
	D4 = D4c(0)
   Next
D7 = STSVR.value
If D7 > 0 Then
If D1 = "100" Then
txt3.innerHTML = Replace(F1,"8B0000","000000") & "</FONT>"
STSVR.value = 0
ElseIf D1 > D7 Then
txt3.innerHTML = Replace(F1,"8B0000","000000") & "</FONT>"
STSVR.value = 0
End If
End If
If D2 = "stsvr" Then
	txt3.innerHTML = Replace(F1,"000000","8B0000") & "Conexão Perdida! Reconectando...</FONT>"
	STSVR.value = D1
	idTimer = window.setTimeout("Counter", 1, "VBScript")
Exit Function
End If
If D1 = 0 Then
	Set objFSO = Nothing
	Set objRead = Nothing
idTimer = window.setTimeout("Counter", 1, "VBScript")
ElseIf D1 = "100" Then
bar.style.width = D4a & "%"
If Mode = "update" Then
	 txt1.innerHTML = F1 & "Atualização Baixada! Iniciando Instalação...</FONT>"
ElseIf Mode = "install" Then
	 txt1.innerHTML = F1 & "Tradução Baixada! Iniciando Instalação...</FONT>"
End If
	 txt2.innerHTML = F1 & D1 & "%</FONT>"
	 txt4.innerHTML = F1 & "Progresso Total: " & D4 & "%</FONT>"
	Set objFSO = Nothing
	Set objRead = Nothing
idTimer = window.setTimeout("InstallE", 1, "VBScript")
Else
bar.style.width = D4a & "%"
If Mode = "update" Then
	 txt1.innerHTML = F1 & "Baixando Atualização...</FONT>"
ElseIf Mode = "install" Then
	 txt1.innerHTML = F1 & "Baixando Tradução...</FONT>"
End If
	 txt2.innerHTML = F1 & D1 & "% " & D3 & D6 & "</FONT>"
	 txt4.innerHTML = F1 & "Progresso Total: " & D4 & "%</FONT>"
	Set objFSO = Nothing
	Set objRead = Nothing
idTimer = window.setTimeout("Counter", 1, "VBScript")
End If
Exit Function
   End Function
   Function InstallD()
txt1.innerHTML = F1 & "Instalando...</FONT>"
txt2.innerHTML = F1 & "</FONT>"
txt3.innerHTML = F1 & "</FONT>"
txt4.innerHTML = F1 & "</FONT>"
