'-> OnLoad Action
   Function Window_OnLoad()
bar.style.width = "0%"
InitC = "0"
arrCommands = Split(AppProgressUp.commandLine, " /:")
   For i = 1 to (Ubound(arrCommands))
	InitC = arrCommands(1)
   Next
If InitC = "0" Then
idTimer = window.setTimeout("MyTimer2", 1, "VBScript")
Exit Function
End If
Set objFSO = CreateObject("Scripting.FileSystemObject")
