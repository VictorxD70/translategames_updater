<html>
<head>
<title>Iniciando...</title>
  <HTA:APPLICATION ID="AppBootUp" 
   SCROLL="No"		   
   SCROLLFLAT ="No"  
   SingleInstance="Yes"   
   ShowInTaskbar="Yes"		   
   SysMenu="No"		  
   MaximizeButton="No"		
   MinimizeButton="No"	
   Border="None" 
   BORDERSTYLE ="None" 
   INNERBORDER ="No"  
   Caption="No"		  
   WindowState="Normal" 
   APPLICATIONNAME="BootUp"
   VERSION="1.6"
   Icon="Icon2.ico">
<meta http-equiv="x-ua-compatible" content="ie=6"/>
<script type="text/javascript">
    window.resizeTo(85,100);
    window.moveTo((window.screen.availWidth-85)/2, (window.screen.availHeight-100)/2);
</script>
<style type="text/css">
  body
   {
	Font-Size:12.25pt;
	Font-Weight:Bold;
	Font-Family:helvetica,verdana,arial;
	Color:#000000;
	Cursor:Default;
	/*BackGround:Transparent;*/
	BackGround-Color:#FF8C00;
	Margin-Top:5px;
	Margin-Bottom:5px;
	Margin-Left:5px;
	Margin-Right:5px;
	Padding-Top:3px;
	Padding-Bottom:3px;
	Padding-Left:5px;
	Padding-Right:5px;
	Text-Align:Left;
	Vertical-Align:Top;
   }
  td.Type1
   {
    Margin-Left:21px;
    Padding-Left:15px;
   }
</style>
<script language='vbscript'>
'-> Resize And Move Window
  Dim Wth :Wth = int(85)
  Dim Hht :Hht = int(100)
  window.ResizeTo Wth, Hht
  MoveTo ((Screen.Width / 2) - (Wth / 2)),((Screen.Height / 2) - (Hht / 2))
'-> Text Display Varible
  Dim F1 :F1 = "<FONT STYLE='Font:20.0pt;Color:#000000;Font-Weight:Bold;'>"
'-> Count Down Display Varibles
  Dim D1, D2, D3
'-> OnLoad Action
   Function Window_OnLoad()
On Error Resume Next
InitC = "0"
arrCommands = Split(AppBootUp.commandLine, " /:")
   For i = 1 to (Ubound(arrCommands))
	InitC = arrCommands(1)
   Next
If InitC = "0" Then
idTimer = window.setTimeout("MyTimer2", 1, "VBScript")
Exit Function
End If
Set objWMIService = GetObject("winmgmts:\\.\root\cimv2")
Set colOperatingSystems = objWMIService.ExecQuery("Select * from Win32_OperatingSystem")
For Each objOperatingSystem in colOperatingSystems
	osversion = replace(objOperatingSystem.Version,".","")
Next
osv.value = osversion
	txt1.innerHTML = F1 & "</FONT>"
	PointerA()
	Check()
	idTimer = window.setTimeout("MyTimer2", 30000, "VBScript")
   End Function
   Function PointerA()
On Error Resume Next
version = 0
Pt = txt1.innerHTML
version = osv.value
If version < 520000 Then
F2 = "<FONT style=""LINE-HEIGHT: normal; FONT-VARIANT: normal; FONT-STYLE: normal; COLOR: #000000; FONT-SIZE: 20pt; FONT-WEIGHT: bold"">"
Else
F2 = "<FONT style=""FONT-SIZE: 20pt; FONT-VARIANT: normal; FONT-WEIGHT: bold; COLOR: #000000; FONT-STYLE: normal; LINE-HEIGHT: normal"">"
End If
Pt0 = F2 & "</FONT>"
Pt1 = F2 & ".</FONT>"
Pt2 = F2 & "..</FONT>"
Pt3 = F2 & "...</FONT>"
Pt4 = F2 & "....</FONT>"
If Pt = Pt1 Then
txt1.innerHTML = Pt2
idTimer = window.setTimeout("PointerA", 500, "VBScript")
Exit Function
ElseIf Pt = Pt2 Then
txt1.innerHTML = Pt3
idTimer = window.setTimeout("PointerA", 500, "VBScript")
Exit Function
ElseIf Pt = Pt3 Then
txt1.innerHTML = Pt4
idTimer = window.setTimeout("PointerA", 500, "VBScript")
Exit Function
ElseIf Pt = Pt4 Then
txt1.innerHTML = Pt0
idTimer = window.setTimeout("PointerA", 500, "VBScript")
Exit Function
ElseIf Pt = Pt0 Then
txt1.innerHTML = Pt1
idTimer = window.setTimeout("PointerA", 500, "VBScript")
Exit Function
End If
   End Function
   Function Check()
On Error Resume Next
Set objFSO2 = CreateObject("Scripting.FileSystemObject")
Set objRead2 = objFSO2.OpenTextFile("Boot.log", 1, True)
D2 = objRead2.ReadLine
If D2 = "stop" Then
	idTimer = window.setTimeout("MyTimer2", 1, "VBScript")
Exit Function
Else
	idTimer = window.setTimeout("Check", 1, "VBScript")
End If
Exit Function
   End Function
'-> Close The HTA Window
   Function HtaExit() 
	window.clearTimeout(idTimer)
	idTimer = window.setTimeout("MyTimer2", 1, "VBScript")
   End Function
'-> Timer2
   Function MyTimer2()
	window.close()
	window.clearTimeout(idTimer)
   Exit Function
   End Function
</script>
</head>
 <body scroll='No' align='center'>
<img src="icon.png" style="width:65px;height:65px">
<table><td class='Type1'><span style="position:absolute;margin-top:-25px" id='txt1'></span></td></table>
<input id="osv" type="text" name="osv" style="display:none" value="" />
 </body>
</html>